%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\section{Hardness of Approximation - Full Proof}
\begin{frame}{Hardness of Approximation Theorem}
  \begin{theo*}
 It is NP-hard to approximate the $\varphi$-\textsc{MaxCoverage} problem for $\varphi(n) = o(n)$ within a factor greater that $\alpha_{\varphi} + \varepsilon$ for any $\varepsilon > 0$.
  \label{theo:Hardness}
\end{theo*}

  \bigskip
  \pause
  
\begin{defi}[$h$-\textsc{AryLabelCover}]
  An instance $\mathcal{G} = (V,E,[L],[R],\set{\pi_{e,v}}_{e \in E, v \in e})$ of $h$-\textsc{AryLabelCover} is characterized by $h$-uniform regular hypergraph $(V, E)$ and constraints $\pi_{e,v} : [L] \rightarrow [R]$. 
\end{defi}
\end{frame}
\begin{frame}
  \begin{defi}
    For any labeling $\sigma : V \rightarrow [L]$:
    \begin{itemize}
      \item An edge $e = (v_1,\ldots,v_h) \in E$ is \emph{strongly satisfied} by $\sigma$ if:\\
    $\forall x,y \in [h], \pi_{e,v_x}(\sigma(v_x)) = \pi_{e,v_y}(\sigma(v_y))$.
      \item An edge $e = (v_1,\ldots,v_h) \in E$ is \emph{weakly satisfied} by $\sigma$ if:\\ $\exists x\not=y \in [h], \pi_{e,v_x}(\sigma(v_x)) = \pi_{e,v_y}(\sigma(v_y))$.
    \end{itemize}
  \end{defi}

  \pause

  \includegraphics[scale=0.35]{haryLabelCover.png}

\end{frame}

\begin{frame}{The \textrm{NP}-hardness problem}    
\begin{prop}[$\delta,h$-\textsc{AryGapLabelCover}]
\label{prop:hardness-ary-lc}
For any fixed integer $h \geq 2$ and fixed $\delta > 0$, there exists an $R_0$ such that for any integer $R \geq R_0$, it is {\rm NP}-hard for instances $\mathcal{G} = (V,E,[L],[R],\set{\pi_{e,v}}_{e \in E, v \in e})$ of $h$-\textsc{AryLabelCover} with right alphabet $[R]$ to distinguish between:
\bigskip
  \begin{itemize}
  \item[\textbf{YES:}] There exists a labeling $\sigma$ that \emph{strongly satisfies} all the edges.
    \bigskip
  \item[\textbf{NO:}] No labeling \emph{weakly satisfies} more than $\delta$ fraction of the edges.
  \end{itemize}
  \label{prop:AryGapLabelCover}
\end{prop}
\end{frame}

\begin{frame}{Crucial Tool: Partitioning System}
  \begin{itemize}
  \item $\mathcal{Q}$ is an \emph{$x$-cover} of $x \in \mathbb{N}$ if every element of $[n]$ is covered $x$ times, so $C^{\varphi}(\mathcal{Q}) = n\varphi(x)$.
  \item Let $x_{\varphi} \in \text{argmin}_{x \in \mathbb{N}^*}\alpha_{\varphi}(x)$.
    \pause
\begin{defi}[Generalizing \cite{Feige98,BFGG20}]
  An \emph{$([n],h,R,\varphi,\eta)$-partitioning system} consists of $R$ collections of subsets of $[n]$, $\mathcal{P}_1,\ldots,\mathcal{P}_R \subseteq 2^{[n]}$, that satisfy $\frac{x_{\varphi}n}{h} \in \mathbb{N}$, $x_{\varphi} \geq h$ and:
  \begin{enumerate}
  \item For every $i \in [R], \mathcal{P}_i$ is a collection of $h$ subsets $P_{i,1}, \ldots, P_{i,h} \subseteq [n]$ each of size $\frac{x_{\varphi}n}{h}$ which is an $x_{\varphi}$-cover.
    \pause
  \item For any $T \subseteq [R]$ and $\mathcal{Q} = \set{P_{i,j(i)} : i \in T}$ for some function $j : T \rightarrow [h]$, we have $\abs{C^{\varphi}(\mathcal{Q}) -\psi^{\varphi}_{\abs{T},h} n} \leq \eta n$ where:
  \begin{align*}
   \psi^{\varphi}_{k,h} := \mathbb{E}\Big[\varphi\Big(\Bin\Big(k,\frac{x_{\varphi}}{h}\Big)\Big)\Big] \ .
   \end{align*}
  \end{enumerate}
  \label{defi:PartSystem}
\end{defi}
  \end{itemize}

\end{frame}

\begin{frame}{A drawing}
  \includegraphics[scale=0.37]{PartSyst.png}
\end{frame}

\begin{frame}{The Reduction}
  \begin{itemize}
  \item Let $\varepsilon > 0$. For a good choice of parameters $h,\eta,\xi$, define $\delta = \frac{\eta}{2} \frac{\xi^3}{h^2}$ and fix $R \geq h$ large enough.
    \pause
  \item Given $\mathcal{G} = (V,E,[L],[R], \Sigma, \set{\pi_{e,v}}_{e \in E, v \in e})$ of $\delta,h$-\textsc{AryGapLabelCover}, we construct an instance $(\Gamma, \mathcal{F}, k)$ of the $\varphi$-\textsc{MaxCoverage} problem with:
    \begin{enumerate}
      \pause
    \item $n$ large enough to have a $([n],h,R,\varphi,\eta)$-partitioning system,
    \item $\Gamma = [n] \times E$,
    \item $k =\abs{V}$,
      \pause
    \item Consider a  $([n],h,R,\varphi,\eta)$-partitioning system, call $\mathcal{P} =\set{\mathcal{P}_1,\ldots,\mathcal{P}_R}$ the corresponding set of collections:
      \begin{itemize}
      \item $T_{\beta}^{e,v_j} := P_{\pi_{e,v_j}(\beta),j} \times \set{e}$, $e = (v_1,\ldots,v_h) \in E, j \in [h], \beta \in [L]$,
        \pause
      \item $F^v_{\beta} := \bigsqcup_{e \in E:v \in e} T^{e,v}_{\beta}$,
      \item $\mathcal{F} := \set{F^v_{\beta}, v \in V, \beta \in [L]}$.
        \end{itemize}
    \end{enumerate}
  \end{itemize}
\end{frame}

\begin{frame}{The Goal}
  \begin{enumerate}
  \item YES instance $\Rightarrow \exists \mathcal{T}$ of size $k$ such that $C^{\varphi}(\mathcal{T}) \geq \varphi(x_{\varphi})\abs{\Gamma}$ (completeness).
  \item NO instance $\Rightarrow \forall \mathcal{T}$ of size $k$, $C^{\varphi}(\mathcal{T}) \leq (\alpha_{\varphi} + \varepsilon)\varphi(x_{\varphi})\abs{\Gamma}$ (soundness).
    \end{enumerate}

  \pause
  Let us determine the relevant part of $C^{\varphi}$ on each edge:
  \begin{itemize}
  \item $C^{\varphi,e} := \sum_{a \in [n] \times \set{e}} C^{\varphi}_a$. So $C^{\varphi} = \sum_{e \in E}C^{\varphi,e}$.
    \pause
  \item For $\mathcal{T} \subseteq \mathcal{F}$, we define the relevant part of $\mathcal{T}$ on $e$ by:
    \begin{align*}
      \mathcal{T}_e &:= \set{T_{\beta}^{e,v} : v \in e, F^v_{\beta} \in \mathcal{T}} = \set{F^v_{\beta} \cap ([n] \times \set{e}), F^v_{\beta} \in \mathcal{T}}\  .
    \end{align*}
  \item Thus:
    \[ C^{\varphi}(\mathcal{T}) = \sum_{e \in E} C^{\varphi,e}(\mathcal{T}_e) \ . \]
  \end{itemize}
\end{frame}

\begin{frame}{Completeness}
  \begin{itemize}
  \item Suppose $\mathcal{G}$ is a YES instance: there exists a labeling $\sigma : V \mapsto [L]$ which strongly satisfies all edges.
  \item Consider $\mathcal{T} := \set{F_{\sigma(v)}^v : v \in V}$ of size $\abs{V}$.
    \pause
    \bigskip
  \item  Fix $e = (v_1,\ldots,v_h) \in E$. Since $e$ is strongly satisfied by $\sigma$, there exists $r \in [R]$ such that $\pi_{e,v_i}(\sigma(v_i)) = r$ for all $i \in [h]$.
  \item So $\mathcal{T}_e = \set{T_{\sigma(v_i)}^{e,v_i}}_{i \in [h]} = \set{P_{r,i} \times \set{e}}_{i \in [h]}$ is an $x_{\varphi}$-cover of $[n] \times \set{e}$. Therefore $C^{\varphi,e}(\mathcal{T}_e) = n\varphi(x_{\varphi})$.
    \pause
    \bigskip
  \item Thus $C^{\varphi}(\mathcal{T}) = \sum_{e \in E}C^{\varphi,e}(\mathcal{T}_e) = \abs{E}n\varphi(x_{\varphi}) = \varphi(x_{\varphi})\abs{\Gamma}$.
    \end{itemize}
\end{frame}

\begin{frame}{Soundness I}
  \begin{itemize}
  \item Suppose $\mathcal{G}$ is a NO instance. Contrapositive of the soundness:\begin{enumerate}
  \item We suppose that there exists $\mathcal{T}$ of size $k = \abs{V}$ such that  $C^{\varphi}(\mathcal{T}) > (\alpha_{\varphi} + \varepsilon)\varphi(x_{\varphi})\abs{\Gamma}$.
  \item We show there exists a labeling $\sigma$ that weakly satisfies a strictly larger fraction of edges than $\delta$.
  \end{enumerate}

    \pause
    
  \item For $v \in V$, $L(v) := \set{\beta \in [L] : F_{\beta}^v \in \mathcal{T}}$. For $e = (v_1,\ldots,v_h)$, $L(e) := \bigcup_{i \in [h]} L(v_i)$ is the \emph{multiset} of all labels associated with the edge. %Note that $\abs{\mathcal{T}_e}=\abs{L(e)}$.

    \pause

  \item $e = (v_1,\ldots,v_h) \in E$ is \emph{consistent} if and only if $\exists x \not= y \in [h], \pi_{e,v_x}(L(v_x)) \cap \pi_{e,v_y}(L(v_y)) \not= \emptyset$.
    
    \pause
    \bigskip
  \item We decompose $E$ in three parts:
    \begin{enumerate}
    \item $B$ set of edges $e$ with $\abs{L(e)} \geq \frac{h}{\xi}$.
    \item $N$ set of consistent edges $e$ with $\abs{L(e)} < \frac{h}{\xi}$.
    \item $I = E - (B \cup N)$ set of inconsistent edges $e$ with $\abs{L(e)} < \frac{h}{\xi}$.
    \end{enumerate}
  \end{itemize}
\end{frame}

\begin{frame}{Soundness II}
  \begin{itemize}
  \item We show that the contribution of $N$ is not too small:
    \begin{enumerate}
    \item $\sum_{e \in B} C^{\varphi,e}(\mathcal{T}_e) \leq \frac{\varepsilon}{4}\varphi(x_{\varphi})\abs{\Gamma}$.
    \item $\sum_{e \in I} C^{\varphi,e}(\mathcal{T}_e) \leq (\alpha_{\varphi} + \frac{\varepsilon}{2})\varphi(x_{\varphi})\abs{\Gamma}$.
    \item $\sum_{e \in N} C^{\varphi,e}(\mathcal{T}_e) > \frac{\varepsilon}{4}\varphi(x_{\varphi})\abs{\Gamma}$ and thus $\frac{\abs{N}}{\abs{E}} \geq \xi\eta$.
    \end{enumerate}
    \pause
  \item Construct a randomized labeling $\sigma : V \mapsto [L]$ which will satisfy strictly more than $\delta$ fraction of the edges in expectation:
    \begin{enumerate}
    \item For $v \in V$, if $L(v) \not= \emptyset$, set $\sigma(v)$ uniformly form $L(v)$,
    \item Otherwise, set it arbitrarily.
    \end{enumerate}
    \pause
  \item Let $e = (v_1,\ldots,v_h) \in N$.
    \begin{enumerate}
    \item $\exists x \not= y \in [h], \pi_{e,v_x}(L(v_x)) \cap \pi_{e,v_y}(L(v_y)) \not= \emptyset$ with $\abs{L(v_x)},\abs{L(v_y)} \leq h/\xi$.
    \item So $\pi_{e,v_x}(L(v_x)) = \pi_{e,v_y}(L(v_y))$ w.p. at least $\left(\xi/h\right)^2$.
    \end{enumerate}
    \pause
    \begin{align*}
      \text{Thus: }  & \mathbb{E}_{\sigma}\mathbb{E}_{e \sim E}[\sigma \text{ weakly satisfies } e]\\
      \geq& \xi \eta \mathbb{E}_{\sigma}\mathbb{E}_{e \sim E}[\sigma \text{ weakly satisfies } e | e \in N]
      \geq \eta \xi^3/h^2 > \delta \ .
  \end{align*}
  \end{itemize}
\end{frame}



