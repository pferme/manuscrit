\end{frame}

\begin{frame}{Communiquer avec du bruit ?}
  \begin{center}
    \only<1>{\begin{tikzpicture}
      \node at (3.6,0) (tin) {\includegraphics[scale=0.23]{tin-can-telephone.jpg}};
