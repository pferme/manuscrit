\end{frame}


\begin{frame}{Modélisation mathématique}
  \begin{center}
    \begin{tikzpicture}[auto, node distance=2cm,>=latex']
      \node [bigblock] (W) {$W$};
      \node [right of=W] (y) {\only<1-2>{$y$}\only<3>{\alert{$0$}}\only<4>{\alert{$1$}}};
      \node [left of=W] (x) {\only<1-2>{$x$}\only<3-4>{\alert{$0$}}};
      \draw [->] (x) -- (W);
      \draw [->] (W) -- (y);
    \end{tikzpicture}

    \pause
    \bigskip
    Probabilité \only<2>{$W(y|x)$}\only<3>{\alert{$9/10$}}\only<4>{\alert{$1/10$}} d'avoir la sortie \only<2>{$y$}\only<3>{\alert{$0$}}\only<4>{\alert{$1$}} pour l'entrée \only<2>{$x$}\only<3-4>{\alert{$0$}}.
  \end{center} 
\end{frame}

\begin{frame}{Le problème du codage de canal}
  \begin{center}
    \begin{tikzpicture}[auto, node distance=2.5cm,>=latex']
      \node [block] (e) {$e$};
      \node [bigblock, right of=e] (W) {$W$};
      \node [block, right of=W] (d) {$d$};
      \draw [->] (e) -- node[name=x] {$x$} (W);
      \draw [->] (W) -- node[name=y] {$y$} (d);
      \node [left of=e, node distance=1.5cm] (i) {$i$};
      \node [right of=d,  node distance=1.5cm] (j) {$j$};
      \draw [draw,->] (i) -- (e);
      \draw [draw,->] (d) -- (j);
    \end{tikzpicture}

    \bigskip

    Trouver $e$ et $d$ tels que $j=i$.
  \end{center}
  %Envoi de $k$ messages uniformes, trouver meilleur e/d pour maximiser la proba de succès (2 types de caractère: lettres VS nombres)
\end{frame}

\begin{frame}{Résolution \cite{BF18}}
Problème difficile, impossible de trouver efficacement (ie. NP difficile) le meilleur

Par contre, on peut trouver efficacement une $1-e^{-1} \simeq 0.63$ approx, ie. qui trouve une solution qui fait au moins $63\%$ aussi bien que le meilleur, et on ne peut pas faire mieux
\end{frame}
